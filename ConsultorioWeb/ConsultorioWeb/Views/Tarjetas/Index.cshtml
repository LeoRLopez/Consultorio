@model IEnumerable<ConsultorioWeb.Models.Tarjetas>

@{
    ViewBag.Title = "Listado de Tarjetas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de Tarjetas</h2>

<p>
    @Html.ActionLink("Crear Nueva Tarjeta", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titular)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroTarjeta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaVto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdBanco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BajaLogica)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Titular)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroTarjeta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaVto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdBanco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BajaLogica)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdTarjeta }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.IdTarjeta }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IdTarjeta })
        </td>
    </tr>
}

</table>
